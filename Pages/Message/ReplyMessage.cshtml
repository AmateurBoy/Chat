}
<h5>Ответ в чат: @Model[0].Name</h5>
<h6>Ответить на: @Model[2].Text</h6>

<div>
    <form action="~/ReplyPublicResult" method="get">
        <input id="textinput" style="width:60%;height:150px;background:#334; color:whitesmoke" type="text" name="Text"/>
        <input id="Chatid" style="display:none" type="text" name="ChatId" value=@Model[0].Id />
        <input id="Userid" style="display:none" type="text" name="UserId" value=@Model[1] />
        <input id="msgid" style="display:none" type="text" name="MsgId" value=@Model[2].Id />
        <button type="submit" style="background:#333;">
            <img src="/img/Seend.png" height="25" />
        </button>
    </form>
</div>